# mLITE Docker PHP 5.6 Environment
FROM php:5.6-fpm

# Install system dependencies (use snapshot.debian.org for EOL stretch)
RUN echo 'Acquire::Check-Valid-Until "false";' > /etc/apt/apt.conf.d/99snapshot && \
    echo 'Acquire::AllowInsecureRepositories "true";' >> /etc/apt/apt.conf.d/99snapshot && \
    printf "deb [trusted=yes] http://snapshot.debian.org/archive/debian/20190302T000000Z stretch main\n" > /etc/apt/sources.list && \
    printf "deb [trusted=yes] http://snapshot.debian.org/archive/debian-security/20190302T000000Z stretch/updates main\n" >> /etc/apt/sources.list && \
    apt-get -o Acquire::Check-Valid-Until=false -o Acquire::AllowInsecureRepositories=true update && apt-get install -y --allow-unauthenticated \
    git \
    curl \
    libpng-dev \
    libjpeg-dev \
    libmcrypt-dev \
    libxml2-dev \
    libicu-dev \
    libfreetype6-dev \
    zlib1g-dev \
    libxslt-dev \
    libzip-dev \
    libssl-dev \
    zip \
    unzip && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

# PHP extensions
RUN docker-php-ext-install \
    pdo_mysql \
    mysqli \
    mbstring \
    exif \
    pcntl \
    bcmath \
    intl \
    zip \
    opcache

# GD with legacy flags (PHP < 7.4)
RUN docker-php-ext-configure gd --with-freetype-dir=/usr/include/ --with-jpeg-dir=/usr/include/ && \
    docker-php-ext-install -j$(nproc) gd

# Redis and Xdebug via PECL (compatible versions for PHP 5.6)
RUN pecl channel-update pecl.php.net || true && pecl install redis-3.1.6 && docker-php-ext-enable redis
RUN pecl install xdebug-2.5.5 && docker-php-ext-enable xdebug

# Custom PHP config
COPY ./php/php.ini /usr/local/etc/php/conf.d/custom.ini

WORKDIR /var/www/public

COPY ./php/entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh
ENTRYPOINT ["/entrypoint.sh"]

EXPOSE 9000